<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_layout">

    <TextView android:text="@string/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Headline" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/red_button"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:enabled="true"

        android:elegantTextHeight="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/blue_button"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignTop="@+id/red_button"
        android:layout_toRightOf="@+id/red_button"
        android:layout_toEndOf="@+id/red_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/green_button"
        android:layout_below="@+id/red_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:id="@+id/purple_button"
        android:layout_below="@+id/blue_button"
        android:layout_alignLeft="@+id/blue_button"
        android:layout_alignStart="@+id/blue_button"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Toast"
        android:id="@+id/shortToast"
        android:clickable="true"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:layout_alignTop="@+id/blue_button"
        android:layout_toRightOf="@+id/blue_button"
        android:layout_toEndOf="@+id/blue_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Toast"
        android:id="@+id/longToast"
        android:clickable="true"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:layout_below="@+id/shortToast"
        android:layout_toRightOf="@+id/blue_button"
        android:layout_toEndOf="@+id/blue_button" />


</RelativeLayout>
